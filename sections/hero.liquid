{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<div class="hero-banner hero-banner--{{ section.settings.height }}" style="background: {{ section.settings.background_color }}; position: relative; overflow: hidden;">
  <div class="hero-banner__container container" style="max-width: 1400px; margin: 0 auto; padding: 80px 40px;">
    <div class="hero-banner__grid" style="display: grid; grid-template-columns: 1fr 1fr; gap: 80px; align-items: center;">
      
      <!-- Left Content -->
      <div class="hero-banner__content">
        {%- if section.settings.subtitle != blank -%}
          <p class="hero-banner__subtitle" style="font-size: 18px; color: #6b7280; margin-bottom: 10px; font-weight: 500;">
            {{ section.settings.subtitle }}
          </p>
        {%- endif -%}

        {%- if section.settings.title != blank -%}
          <h1 class="hero-banner__title" style="font-size: clamp(48px, 8vw, 72px); font-weight: 900; color: #00D4FF; margin-bottom: 20px; line-height: 1.1;">
            {{ section.settings.title }}
          </h1>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="hero-banner__description" style="font-size: 16px; line-height: 1.8; color: #6b7280; margin-bottom: 30px; max-width: 500px;">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        {%- if section.settings.button_label != blank -%}
          <div style="display: flex; align-items: center; gap: 20px; flex-wrap: wrap;">
            <a href="{{ section.settings.button_link }}" 
               class="btn btn--primary"
               style="display: inline-block; padding: 18px 40px; background: #00D4FF; color: white; border-radius: 50px; font-weight: 700; text-decoration: none; transition: all 0.3s;">
              {{ section.settings.button_label }}
            </a>
            
            {%- if section.settings.show_price -%}
              <div style="display: flex; align-items: center; gap: 10px;">
                <span style="font-size: 14px; color: #6b7280;">{{ section.settings.price_text }}</span>
                <span style="font-size: 24px; font-weight: 800; color: #1a1a1a;">{{ section.settings.price }}</span>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>

      <!-- Right Image -->
      <div class="hero-banner__media" style="position: relative;">
        <div class="hero-banner__media-wrapper" style="position: relative; background: linear-gradient(135deg, rgba(0, 212, 255, 0.1), rgba(0, 184, 230, 0.1)); border-radius: 200px 200px 0 0; padding: 60px; text-align: center;">
          {%- if section.settings.image != blank -%}
            <img src="{{ section.settings.image | img_url: '800x' }}" 
                 alt="{{ section.settings.title }}" 
                 style="max-width: 100%; height: auto; margin: 0 auto;">
          {%- else -%}
            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
          {%- endif -%}
        </div>
        
        <!-- Decorative circles -->
        <div style="position: absolute; top: -50px; right: -50px; width: 300px; height: 300px; background: rgba(0, 212, 255, 0.1); border-radius: 50%; z-index: -1;"></div>
      </div>
    </div>
  </div>
</div>

<style>
.hero-banner {
  position: relative;
  padding: 80px 0;
}

.btn--primary:hover {
  background: #00B8E6 !important;
  transform: translateY(-2px);
  box-shadow: 0 10px 25px rgba(0, 212, 255, 0.3);
}

@media (max-width: 968px) {
  .hero-banner__grid {
    grid-template-columns: 1fr !important;
    gap: 40px !important;
  }
  
  .hero-banner__media {
    order: -1;
  }
  
  .hero-banner__content {
    text-align: center;
  }
  
  .hero-banner__description {
    margin-left: auto !important;
    margin-right: auto !important;
  }
}
</style>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "select",
      "id": "height",
      "label": "Section height",
      "options": [
        {"value": "small", "label": "Small"},
        {"value": "medium", "label": "Medium"},
        {"value": "large", "label": "Large"}
      ],
      "default": "large"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f0f9ff"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Elevate Your Senses with Our"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Perfumes"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show price",
      "default": true
    },
    {
      "type": "text",
      "id": "price_text",
      "label": "Price label",
      "default": "Starting from"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Price",
      "default": "$45.00"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}