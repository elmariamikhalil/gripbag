<style>
  .featured-collection-{{ section.id }} {
    padding: 80px 0;
    background: {{ section.settings.background_color }};
  }

  .collection-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .product-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: var(--color-primary);
    color: white;
    padding: 6px 14px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 10;
  }

  .quick-add-btn {
    position: absolute;
    bottom: 15px;
    left: 15px;
    right: 15px;
    padding: 14px;
    background: white;
    color: var(--color-dark);
    border: none;
    border-radius: var(--border-radius-small);
    font-weight: 600;
    cursor: pointer;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .product-card:hover .quick-add-btn {
    opacity: 1;
    transform: translateY(0);
  }

  .quick-add-btn:hover {
    background: var(--color-dark);
    color: white;
  }

  .view-all-btn {
    text-align: center;
    margin-top: 50px;
  }

  @media (max-width: 768px) {
    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
      padding: 0 20px;
    }

    .featured-collection-{{ section.id }} {
      padding: 60px 0;
    }
  }
</style>

<section class="featured-collection-{{ section.id }}">
  <div class="container">
    <div class="collection-header">
      {% if section.settings.heading != blank %}
        <h2 class="section-heading">{{ section.settings.heading }}</h2>
      {% endif %}
      
      {% if section.settings.subheading != blank %}
        <p class="section-subheading">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>

    <div class="product-grid">
      {% assign collection = collections[section.settings.collection] %}
      {% for product in collection.products limit: section.settings.products_to_show %}
        <div class="product-card">
          <div class="product-image">
            {% if product.compare_at_price > product.price %}
              <div class="product-badge">Sale</div>
            {% endif %}

            <a href="{{ product.url }}">
              {% if product.featured_image %}
                <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.title }}" loading="lazy">
              {% else %}
                <div style="background: var(--color-light-bg); aspect-ratio: 1; display: flex; align-items: center; justify-content: center; color: #9ca3af;">
                  No Image
                </div>
              {% endif %}
            </a>

            <form action="/cart/add" method="post">
              <input type="hidden" name="id" value="{{ product.variants.first.id }}">
              <button type="submit" class="quick-add-btn" {% unless product.available %}disabled{% endunless %}>
                {% if product.available %}Quick Add{% else %}Sold Out{% endif %}
              </button>
            </form>
          </div>

          <div class="product-info">
            <a href="{{ product.url }}" class="product-title">{{ product.title }}</a>
            <div class="product-price">
              {% if product.compare_at_price > product.price %}
                <span style="text-decoration: line-through; color: #9ca3af; font-size: 16px; margin-right: 8px;">
                  {{ product.compare_at_price | money }}
                </span>
              {% endif %}
              {{ product.price | money }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_view_all %}
      <div class="view-all-btn">
        <a href="{{ collection.url }}" class="btn btn-secondary">View All Products</a>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Featured Collection",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our most popular items"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 6
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    }
  ],
  "presets": [
    {
      "name": "Featured Collection"
    }
  ]
}
{% endschema %}