<style>
.hero-stylish {
  background: linear-gradient(135deg, #F5F5F0 0%, #E8E8DC 100%);
  min-height: 90vh;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
  padding: 60px 20px;
}

.hero-stylish::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 50%;
  height: 100%;
  background: linear-gradient(135deg, rgba(85, 107, 47, 0.05) 0%, rgba(74, 93, 35, 0.08) 100%);
  border-radius: 0 0 0 200px;
}

.hero-container {
  max-width: 1400px;
  margin: 0 auto;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 80px;
  align-items: center;
  position: relative;
  z-index: 2;
}

.hero-content {
  padding: 40px;
}

.hero-tag {
  display: inline-block;
  font-size: 14px;
  font-weight: 600;
  color: var(--color-primary);
  text-transform: uppercase;
  letter-spacing: 2px;
  margin-bottom: 20px;
  writing-mode: vertical-rl;
  transform: rotate(180deg);
  position: absolute;
  left: -60px;
  top: 50%;
}

.hero-title {
  font-size: clamp(36px, 6vw, 64px);
  font-weight: 800;
  line-height: 1.1;
  margin-bottom: 20px;
  color: var(--color-dark);
}

.hero-title .highlight {
  color: var(--color-primary);
  display: block;
}

.hero-description {
  font-size: 16px;
  line-height: 1.8;
  color: var(--color-text-muted);
  margin-bottom: 30px;
  max-width: 500px;
}

.hero-price {
  font-size: 32px;
  font-weight: 700;
  color: var(--color-dark);
  margin-bottom: 30px;
}

.hero-colors {
  margin-bottom: 30px;
}

.hero-colors h4 {
  font-size: 14px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 15px;
  color: var(--color-dark);
}

.color-options {
  display: flex;
  gap: 15px;
}

.color-option {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 3px solid transparent;
  cursor: pointer;
  transition: all 0.3s;
}

.color-option.active {
  border-color: var(--color-dark);
  transform: scale(1.1);
}

.color-option.army-green {
  background: #556B2F;
}

.color-option.charcoal {
  background: #2D2D2D;
}

.color-option.tan {
  background: #D2B48C;
}

.hero-cta {
  display: inline-block;
  padding: 18px 50px;
  background: var(--color-primary);
  color: white;
  font-weight: 700;
  font-size: 16px;
  border-radius: var(--radius-full);
  text-decoration: none;
  transition: all 0.3s;
  box-shadow: 0 10px 30px rgba(85, 107, 47, 0.3);
}

.hero-cta:hover {
  background: var(--color-primary-hover);
  transform: translateY(-3px);
  box-shadow: 0 15px 40px rgba(85, 107, 47, 0.4);
  color: white;
}

.hero-image {
  position: relative;
}

.hero-image-wrapper {
  position: relative;
  width: 100%;
  max-width: 600px;
  margin: 0 auto;
}

.hero-image-bg {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 500px;
  height: 500px;
  background: linear-gradient(135deg, rgba(85, 107, 47, 0.15) 0%, rgba(107, 142, 35, 0.1) 100%);
  border-radius: 50%;
  z-index: 1;
}

.hero-product-image {
  position: relative;
  z-index: 2;
  max-width: 100%;
  height: auto;
  filter: drop-shadow(0 20px 40px rgba(0, 0, 0, 0.15));
}

.hero-badge {
  position: absolute;
  top: 20%;
  right: -50px;
  background: white;
  padding: 20px 30px;
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-xl);
  z-index: 3;
}

.hero-badge-label {
  font-size: 12px;
  color: var(--color-text-muted);
  text-transform: uppercase;
  letter-spacing: 1px;
  margin-bottom: 5px;
}

.hero-badge-text {
  font-size: 32px;
  font-weight: 800;
  color: var(--color-primary);
  line-height: 1;
  writing-mode: vertical-rl;
  transform: rotate(180deg);
}

.hero-nav {
  position: fixed;
  right: 40px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 15px;
  z-index: 10;
}

.hero-nav-btn {
  width: 50px;
  height: 50px;
  background: var(--color-dark);
  color: white;
  border: none;
  border-radius: 50%;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  box-shadow: var(--shadow-lg);
}

.hero-nav-btn:hover {
  background: var(--color-primary);
  transform: scale(1.1);
}

.hero-social {
  position: absolute;
  left: 40px;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  flex-direction: column;
  gap: 20px;
}

.hero-social a {
  color: var(--color-dark);
  font-size: 20px;
  transition: all 0.3s;
}

.hero-social a:hover {
  color: var(--color-primary);
  transform: translateX(-5px);
}

@media (max-width: 968px) {
  .hero-container {
    grid-template-columns: 1fr;
    gap: 40px;
  }
  
  .hero-tag {
    position: static;
    writing-mode: horizontal-tb;
    transform: none;
    margin-bottom: 20px;
  }
  
  .hero-badge {
    right: 20px;
    top: 10%;
  }
  
  .hero-social {
    display: none;
  }
  
  .hero-nav {
    right: 20px;
  }
}
</style>

<section class="hero-stylish">
  <div class="hero-container">
    <div class="hero-content">
      <span class="hero-tag">{{ section.settings.tag | default: 'Trending' }}</span>
      
      <h1 class="hero-title">
        {{ section.settings.title_line1 | default: 'Stylish Leather' }}
        <span class="highlight">{{ section.settings.title_line2 | default: 'Bags' }}</span>
        {{ section.settings.title_line3 | default: 'Collections 2024' }}
      </h1>
      
      <p class="hero-description">
        {{ section.settings.description | default: "Browse our epic list of the different handbags and you'll find that there are more different styles than you ever dreamed of." }}
      </p>
      
      <div class="hero-price">
        {{ section.settings.price | default: 'Start from $100' }}
      </div>
      
      <div class="hero-colors">
        <h4>Colors</h4>
        <div class="color-options">
          <div class="color-option army-green active"></div>
          <div class="color-option charcoal"></div>
          <div class="color-option tan"></div>
        </div>
      </div>
      
      <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="hero-cta">
        {{ section.settings.button_text | default: 'Buy now' }}
      </a>
    </div>
    
    <div class="hero-image">
      <div class="hero-image-wrapper">
        <div class="hero-image-bg"></div>
        {% if section.settings.image %}
          <img src="{{ section.settings.image | img_url: '800x' }}" alt="{{ section.settings.title_line1 }}" class="hero-product-image">
        {% else %}
          {{ 'product-1' | placeholder_svg_tag: 'hero-product-image' }}
        {% endif %}
        
        <div class="hero-badge">
