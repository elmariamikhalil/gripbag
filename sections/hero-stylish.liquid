<script>
function changeProductColor(color) {
  const bgCircle = document.getElementById('bgCircle');
  const mainImage = document.getElementById('mainProductImage');
  
  // Remove all color classes
  bgCircle.classList.remove('color-army-green', 'color-white', 'color-red');
  
  // Add new color class
  bgCircle.classList.add('color-' + color);
  
  // Change image based on color (you can customize these URLs)
  const imageUrls = {
    'army-green': '{{ section.settings.image_army_green | img_url: "800x" | default: "https://via.placeholder.com/480x600/556B2F/FFFFFF?text=Army+Green" }}',
    'white': '{{ section.settings.image_white | img_url: "800x" | default: "https://via.placeholder.com/480x600/FFFFFF/556B2F?text=White" }}',
    'red': '{{ section.settings.image_red | img_url: "800x" | default: "https://via.placeholder.com/480x600/C41E3A/FFFFFF?text=Red" }}'
  };
  
  mainImage.style.opacity = '0';
  setTimeout(() => {
    mainImage.src = imageUrls[color];
    mainImage.style.opacity = '1';
  }, 200);
}
</script>

