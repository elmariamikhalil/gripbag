<div class="cart-drawer" id="cart-drawer">
  <div class="cart-drawer__overlay"></div>
  
  <div class="cart-drawer__container">
    <div class="cart-drawer__header">
      <h2>Your Cart ({{ cart.item_count }})</h2>
      <button class="cart-drawer__close" onclick="document.getElementById('cart-drawer').classList.remove('active'); document.body.style.overflow = '';">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>

    <div class="cart-drawer__items">
      {%- if cart.item_count > 0 -%}
        {%- for item in cart.items -%}
          <div class="cart-item">
            <img src="{{ item.image | img_url: '100x' }}" alt="{{ item.title }}">
            <div class="cart-item__details">
              <h4>{{ item.product.title }}</h4>
              <p>{{ item.variant.title }}</p>
              <div class="cart-item__quantity">
                <input type="number" value="{{ item.quantity }}" min="1" 
                       data-line="{{ forloop.index }}"
                       onchange="updateCartItem(this)">
              </div>
            </div>
            <div class="cart-item__price">
              {{ item.line_price | money }}
            </div>
          </div>
        {%- endfor -%}
      {%- else -%}
        <p class="cart-drawer__empty">Your cart is empty</p>
      {%- endif -%}
    </div>

    {%- if cart.item_count > 0 -%}
      <div class="cart-drawer__footer">
        <div class="cart-drawer__total">
          <span>Subtotal:</span>
          <span class="cart-drawer__total-price">{{ cart.total_price | money }}</span>
        </div>
        <a href="/cart" class="btn btn--secondary btn--full">View Cart</a>
        <button type="submit" name="checkout" class="btn btn--primary btn--full" 
                onclick="window.location='/checkout'">
          Checkout
        </button>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
.cart-drawer {
  position: fixed;
  top: 0;
  right: -100%;
  width: 100%;
  height: 100%;
  z-index: 1000;
  transition: right 0.3s ease;
}

.cart-drawer.active {
  right: 0;
}

.cart-drawer__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.cart-drawer__container {
  position: absolute;
  top: 0;
  right: 0;
  width: 100%;
  max-width: 400px;
  height: 100%;
  background: white;
  display: flex;
  flex-direction: column;
  box-shadow: -2px 0 10px rgba(0, 0, 0, 0.1);
}

.cart-drawer__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20px;
  border-bottom: 1px solid #e5e7eb;
}

.cart-drawer__close {
  background: none;
  border: none;
  cursor: pointer;
  padding: 5px;
}

.cart-drawer__items {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
}

.cart-item {
  display: grid;
  grid-template-columns: 80px 1fr auto;
  gap: 15px;
  padding: 15px 0;
  border-bottom: 1px solid #e5e7eb;
}

.cart-item img {
  width: 80px;
  height: 80px;
  object-fit: cover;
  border-radius: 8px;
}

.cart-item__quantity input {
  width: 60px;
  padding: 5px;
  border: 1px solid #e5e7eb;
  border-radius: 5px;
  text-align: center;
}

.cart-drawer__footer {
  padding: 20px;
  border-top: 1px solid #e5e7eb;
}

.cart-drawer__total {
  display: flex;
  justify-content: space-between;
  font-size: 18px;
  font-weight: 700;
  margin-bottom: 15px;
}

.btn--full {
  width: 100%;
  margin-bottom: 10px;
}
</style>